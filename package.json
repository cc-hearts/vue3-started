{
  "name": "vue3-starter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prettier": "prettier --write .",
    "scss": "npx sass ./src/assets/scss/test/test.scss  ./src/assets/scss/test/dist/test.css",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cc-heart/utils": "^2.0.17",
    "nprogress": "^0.2.0",
    "unocss": "^0.51.13",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@cc-heart/eslint-config": "^0.0.5",
    "@intlify/unplugin-vue-i18n": "^0.10.1",
    "@types/node": "^20.5.0",
    "@types/nprogress": "^0.2.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vueuse/head": "^1.3.1",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-shiki": "^0.9.0",
    "prettier": "^2.8.8",
    "sass": "^1.65.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-pages": "^0.29.1",
    "vite-plugin-vue-markdown": "^0.23.8",
    "unplugin-auto-import": "^0.16.6",
    "vue-tsc": "^1.8.8"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,json}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md}": "prettier --write"
  }
}
